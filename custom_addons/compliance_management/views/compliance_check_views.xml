<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_compliance_check_form" model="ir.ui.view">
            <field name="name">compliance.check.form</field>
            <field name="model">compliance.check</field>
            <field name="arch" type="xml">
                <form string="Kiểm tra tuân thủ">
                    <header>
                        <button name="action_start" string="Bắt đầu kiểm tra" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_complete" string="Hoàn thành" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                        <button name="action_draft" string="Quay lại dự thảo" type="object"
                                attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        <button name="action_create_corrective_action" string="Tạo hành động khắc phục" type="object"
                                attrs="{'invisible': [('state', 'not in', ['non_compliant', 'completed'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed,non_compliant"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_corrective_actions" type="object" class="oe_stat_button" icon="fa-wrench"
                                    attrs="{'invisible': [('corrective_action_count', '=', 0)]}">
                                <field name="corrective_action_count" widget="statinfo" string="Hành động"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Tên đợt kiểm tra"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="regulation_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="responsible_user_id"/>
                                <field name="department_id"/>
                            </group>
                            <group>
                                <field name="check_date"/>
                                <field name="result" attrs="{'invisible': [('state', 'in', ['draft', 'in_progress'])]}"/>
                                <field name="compliance_score" widget="percentage" attrs="{'invisible': [('state', 'in', ['draft'])]}"/>
                                <field name="next_check_date" attrs="{'invisible': [('state', 'in', ['draft', 'in_progress'])]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Danh mục kiểm tra" name="check_items">
                                <field name="check_item_ids"
                                       attrs="{'readonly': [('state', 'not in', ['draft', 'in_progress'])]}">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="is_compliant"/>
                                        <field name="notes"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Kết quả" name="results" attrs="{'invisible': [('state', '=', 'draft')]}">
                                <field name="result_description" placeholder="Mô tả chi tiết về kết quả kiểm tra..."
                                       attrs="{'readonly': [('state', 'not in', ['in_progress'])]}"/>
                            </page>
                            <page string="Hành động khắc phục" name="corrective_actions"
                                  attrs="{'invisible': [('state', 'in', ['draft'])]}">
                                <field name="corrective_action_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="responsible_user_id"/>
                                        <field name="deadline"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_compliance_check_tree" model="ir.ui.view">
            <field name="name">compliance.check.tree</field>
            <field name="model">compliance.check</field>
            <field name="arch" type="xml">
                <tree string="Kiểm tra tuân thủ" decoration-danger="state == 'non_compliant'" decoration-success="state == 'completed'" decoration-info="state == 'in_progress'" decoration-muted="state == 'draft'">
                    <field name="name"/>
                    <field name="regulation_id"/>
                    <field name="check_date"/>
                    <field name="responsible_user_id"/>
                    <field name="department_id"/>
                    <field name="result"/>
                    <field name="compliance_score" widget="percentage"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_compliance_check_search" model="ir.ui.view">
            <field name="name">compliance.check.search</field>
            <field name="model">compliance.check</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm kiểm tra">
                    <field name="name"/>
                    <field name="regulation_id"/>
                    <field name="responsible_user_id"/>
                    <field name="department_id"/>
                    <filter string="Dự thảo" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Đang thực hiện" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Hoàn thành" name="completed" domain="[('state', '=', 'completed')]"/>
                    <filter string="Không tuân thủ" name="non_compliant" domain="[('state', '=', 'non_compliant')]"/>
                    <separator/>
                    <filter string="Tuân thủ" name="compliant" domain="[('result', '=', 'compliant')]"/>
                    <filter string="Tuân thủ một phần" name="partial" domain="[('result', '=', 'partial')]"/>
                    <filter string="Không tuân thủ" name="non_compliant_result" domain="[('result', '=', 'non_compliant')]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_regulation" string="Quy định" context="{'group_by': 'regulation_id'}"/>
                        <filter name="group_by_responsible" string="Người kiểm tra" context="{'group_by': 'responsible_user_id'}"/>
                        <filter name="group_by_department" string="Phòng ban" context="{'group_by': 'department_id'}"/>
                        <filter name="group_by_month" string="Tháng" context="{'group_by': 'check_date:month'}"/>
                        <filter name="group_by_state" string="Trạng thái" context="{'group_by': 'state'}"/>
                        <filter name="group_by_result" string="Kết quả" context="{'group_by': 'result'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_compliance_check_kanban" model="ir.ui.view">
            <field name="name">compliance.check.kanban</field>
            <field name="model">compliance.check</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                    <field name="name"/>
                    <field name="regulation_id"/>
                    <field name="check_date"/>
                    <field name="responsible_user_id"/>
                    <field name="compliance_score"/>
                    <field name="state"/>
                    <field name="result"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="regulation_id"/>
                                    </div>
                                    <div class="oe_kanban_content">
                                        <div>
                                            <span>Ngày: </span>
                                            <field name="check_date"/>
                                        </div>
                                        <div t-if="record.result.raw_value">
                                            <span>Kết quả: </span>
                                            <field name="result"/>
                                        </div>
                                        <div t-if="record.compliance_score.raw_value">
                                            <span>Điểm: </span>
                                            <field name="compliance_score" widget="percentage"/>
                                        </div>
                                        <div class="oe_kanban_bottom_left">
                                            <img t-att-src="kanban_image('res.users', 'image_small', record.responsible_user_id.raw_value)"
                                                t-att-title="record.responsible_user_id.value" width="24" height="24"
                                                class="oe_kanban_avatar" t-if="record.responsible_user_id.raw_value"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_compliance_check" model="ir.actions.act_window">
            <field name="name">Kiểm tra tuân thủ</field>
            <field name="res_model">compliance.check</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_compliance_check_kanban"/>
            <field name="search_view_id" ref="view_compliance_check_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo đợt kiểm tra tuân thủ đầu tiên!
                </p>
                <p>
                    Quản lý các đợt kiểm tra tuân thủ quy định y tế.
                </p>
            </field>
        </record>
    </data>
</odoo>