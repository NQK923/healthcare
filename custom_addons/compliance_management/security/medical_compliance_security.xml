<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Nhóm bảo mật cho module -->
        <record id="module_medical_compliance_category" model="ir.module.category">
            <field name="name">Quản lý Tuân thủ Y tế</field>
            <field name="description">Phân quyền cho module Quản lý Tuân thủ Y tế</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_medical_compliance_user" model="res.groups">
            <field name="name">Người dùng</field>
            <field name="category_id" ref="module_medical_compliance_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_medical_compliance_manager" model="res.groups">
            <field name="name">Quản lý</field>
            <field name="category_id" ref="module_medical_compliance_category"/>
            <field name="implied_ids" eval="[(4, ref('group_medical_compliance_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Quy tắc bảo mật -->
        <record id="medical_regulation_multi_company_rule" model="ir.rule">
            <field name="name">Quy định Y tế: multi-company</field>
            <field name="model_id" ref="model_medical_regulation"/>
            <field name="global" eval="True"/>
<!--            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>-->
        </record>

        <record id="compliance_check_multi_company_rule" model="ir.rule">
            <field name="name">Kiểm tra tuân thủ: multi-company</field>
            <field name="model_id" ref="model_compliance_check"/>
            <field name="global" eval="True"/>
<!--            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>-->
        </record>

        <record id="corrective_action_multi_company_rule" model="ir.rule">
            <field name="name">Hành động khắc phục: multi-company</field>
            <field name="model_id" ref="model_corrective_action"/>
            <field name="global" eval="True"/>
<!--            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>-->
        </record>

        <record id="compliance_report_multi_company_rule" model="ir.rule">
            <field name="name">Báo cáo tuân thủ: multi-company</field>
            <field name="model_id" ref="model_compliance_report"/>
            <field name="global" eval="True"/>
    <!--        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>-->
        </record>
    </data>
</odoo>
