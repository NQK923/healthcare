<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_compliance_report_form" model="ir.ui.view">
            <field name="name">compliance.report.form</field>
            <field name="model">compliance.report</field>
            <field name="arch" type="xml">
                <form string="Báo cáo tuân thủ">
                    <header>
                        <button name="action_confirm" string="Xác nhận" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_approve" string="Phê duyệt" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                        <button name="action_draft" string="Quay lại dự thảo" type="object"
                                attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        <button name="action_generate_summary" string="Tạo tóm tắt" type="object"
                                attrs="{'invisible': [('state', '=', 'approved')]}"/>
                        <button name="print_report" string="In báo cáo" type="object"
                                attrs="{'invisible': [('state', '!=', 'approved')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Tên báo cáo"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="user_id"/>
                                <field name="confirmed_by" readonly="1" attrs="{'invisible': [('confirmed_by', '=', False)]}"/>
                                <field name="confirmed_date" readonly="1" attrs="{'invisible': [('confirmed_date', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="total_checks"/>
                                <field name="compliant_checks"/>
                                <field name="partial_checks"/>
                                <field name="non_compliant_checks"/>
                                <field name="compliance_percentage" widget="percentage"/>
                                <field name="approved_by" readonly="1" attrs="{'invisible': [('approved_by', '=', False)]}"/>
                                <field name="approved_date" readonly="1" attrs="{'invisible': [('approved_date', '=', False)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Phạm vi" name="scope">
                                <group>
                                    <field name="regulation_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                    <field name="department_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                </group>
                            </page>
                            <page string="Tóm tắt" name="summary">
                                <field name="summary" placeholder="Tóm tắt báo cáo..."/>
                            </page>
                            <page string="Kết luận" name="conclusion">
                                <field name="conclusion" placeholder="Kết luận về tình hình tuân thủ..."/>
                            </page>
                            <page string="Khuyến nghị" name="recommendation">
                                <field name="recommendation" placeholder="Các khuyến nghị để cải thiện tuân thủ..."/>
                            </page>
                            <page string="Đợt kiểm tra" name="checks">
                                <field name="check_ids" readonly="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="regulation_id"/>
                                        <field name="check_date"/>
                                        <field name="result"/>
                                        <field name="compliance_score" widget="percentage"/>
                                        <field name="state" widget="badge"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Hành động khắc phục" name="corrective_actions">
                                <field name="corrective_action_ids" readonly="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="compliance_check_id"/>
                                        <field name="regulation_id"/>
                                        <field name="deadline"/>
                                        <field name="state" widget="badge"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_compliance_report_tree" model="ir.ui.view">
            <field name="name">compliance.report.tree</field>
            <field name="model">compliance.report</field>
            <field name="arch" type="xml">
                <list string="Báo cáo tuân thủ" decoration-success="compliance_percentage >= 90" decoration-warning="compliance_percentage < 90 and compliance_percentage >= 70" decoration-danger="compliance_percentage < 70">
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="user_id"/>
                    <field name="total_checks"/>
                    <field name="compliance_percentage" widget="percentage"/>
                    <field name="state" widget="badge"/>
                    <field name="confirmed_date"/>
                    <field name="approved_date"/>
                </list>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_compliance_report_search" model="ir.ui.view">
            <field name="name">compliance.report.search</field>
            <field name="model">compliance.report</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm báo cáo tuân thủ">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="regulation_ids"/>
                    <field name="department_ids"/>
                    <filter string="Của tôi" name="my_reports" domain="[('user_id', '=', uid)]"/>
                    <filter string="Dự thảo" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Đã xác nhận" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Đã phê duyệt" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Tuân thủ tốt" name="good_compliance" domain="[('compliance_percentage', '>=', 90)]"/>
                    <filter string="Tuân thủ trung bình" name="medium_compliance" domain="[('compliance_percentage', '>=', 70), ('compliance_percentage', '<', 90)]"/>
                    <filter string="Tuân thủ kém" name="poor_compliance" domain="[('compliance_percentage', '<', 70)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Người lập báo cáo" name="group_by_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Trạng thái" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="Tháng lập báo cáo" name="group_by_month" context="{'group_by': 'date_to:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Calendar View -->
        <record id="view_compliance_report_calendar" model="ir.ui.view">
            <field name="name">compliance.report.calendar</field>
            <field name="model">compliance.report</field>
            <field name="arch" type="xml">
                <calendar string="Báo cáo tuân thủ" date_start="date_to" color="user_id" mode="month">
                    <field name="name"/>
                    <field name="compliance_percentage" widget="percentage"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <!-- Pivot View -->
        <record id="view_compliance_report_pivot" model="ir.ui.view">
            <field name="name">compliance.report.pivot</field>
            <field name="model">compliance.report</field>
            <field name="arch" type="xml">
                <pivot string="Phân tích tuân thủ">
                    <field name="date_to" type="row" interval="month"/>
                    <field name="user_id" type="col"/>
                    <field name="compliance_percentage" type="measure"/>
                    <field name="total_checks" type="measure"/>
                    <field name="compliant_checks" type="measure"/>
                    <field name="non_compliant_checks" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Action -->
        <record id="action_compliance_report" model="ir.actions.act_window">
            <field name="name">Báo cáo tuân thủ</field>
            <field name="res_model">compliance.report</field>
            <field name="view_mode">list,form,calendar,pivot</field>
            <field name="context">{'search_default_my_reports': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo báo cáo tuân thủ đầu tiên của bạn
                </p>
                <p>
                    Báo cáo tuân thủ giúp bạn theo dõi và phân tích mức độ tuân thủ các quy định y tế qua thời gian.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_compliance_report"
                  name="Báo cáo tuân thủ"
                  parent="menu_compliance_management_root"
                  action="action_compliance_report"
                  sequence="40"/>
    </data>
</odoo>