<?xml version="1.0" encoding="utf-8"?>
<!-- views/patient_feedback_views.xml -->
<odoo>
    <!-- Form View for Patient Feedback -->
    <record id="view_patient_feedback_form" model="ir.ui.view">
        <field name="name">healthcare.patient.feedback.form</field>
        <field name="model">healthcare.patient.feedback</field>
        <field name="arch" type="xml">
            <form string="Phản hồi từ bệnh nhân">
                <header>
                    <button name="action_in_progress" string="Xử lý" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_resolved" string="Giải quyết" type="object" class="oe_highlight" states="in_progress"/>
                    <button name="action_cancel" string="Hủy" type="object" states="draft,in_progress"/>
                    <button name="action_draft" string="Thiết lập thành Mới" type="object" states="cancelled"/>
                    <button name="action_create_complaint" string="Tạo khiếu nại" type="object" attrs="{'invisible': [('complaint_id', '!=', False)]}" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,resolved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="feedback_date"/>
                            <field name="feedback_type"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                            <field name="satisfaction_rating" widget="priority"/>
                            <field name="complaint_id" readonly="1" attrs="{'invisible': [('complaint_id', '=', False)]}"/>
                            <field name="resolved_date" readonly="1" attrs="{'invisible': [('resolved_date', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Nội dung phản hồi">
                            <field name="description" placeholder="Nhập chi tiết phản hồi từ bệnh nhân..."/>
                        </page>
                        <page string="Giải pháp" attrs="{'invisible': [('state', 'in', ['draft', 'cancelled'])]}">
                            <field name="resolution" placeholder="Nhập phương án giải quyết..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View for Patient Feedback -->
    <record id="view_patient_feedback_tree" model="ir.ui.view">
        <field name="name">healthcare.patient.feedback.tree</field>
        <field name="model">healthcare.patient.feedback</field>
        <field name="arch" type="xml">
            <tree string="Phản hồi từ bệnh nhân" decoration-danger="state=='draft'" decoration-success="state=='resolved'" decoration-info="state=='in_progress'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="feedback_date"/>
                <field name="feedback_type"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="satisfaction_rating" widget="priority"/>
            </tree>
        </field>
    </record>

    <!-- Search View for Patient Feedback -->
    <record id="view_patient_feedback_search" model="ir.ui.view">
        <field name="name">healthcare.patient.feedback.search</field>
        <field name="model">healthcare.patient.feedback</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm phản hồi">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="description"/>
                <separator/>
                <filter string="Mới" domain="[('state','=','draft')]" name="state_draft"/>
                <filter string="Đang xử lý" domain="[('state','=','in_progress')]" name="state_progress"/>
                <filter string="Đã giải quyết" domain="[('state','=','resolved')]" name="state_resolved"/>
                <filter string="Đã hủy" domain="[('state','=','cancelled')]" name="state_cancelled"/>
                <separator/>
                <filter string="Khen ngợi" domain="[('feedback_type','=','compliment')]" name="type_compliment"/>
                <filter string="Góp ý" domain="[('feedback_type','=','suggestion')]" name="type_suggestion"/>
                <filter string="Khiếu nại" domain="[('feedback_type','=','complaint')]" name="type_complaint"/>
                <filter string="Hỏi đáp" domain="[('feedback_type','=','question')]" name="type_question"/>
                <group expand="0" string="Group By">
                    <filter string="Bệnh nhân" name="group_partner" context="{'group_by':'partner_id'}"/>
                    <filter string="Loại phản hồi" name="group_type" context="{'group_by':'feedback_type'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Ngày phản hồi" name="group_date" context="{'group_by':'feedback_date'}"/>
                    <filter string="Người phụ trách" name="group_user" context="{'group_by':'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Patient Feedback -->
    <record id="action_patient_feedback" model="ir.actions.act_window">
        <field name="name">Phản hồi của bệnh nhân</field>
        <field name="res_model">healthcare.patient.feedback</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_patient_feedback_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo phản hồi đầu tiên từ bệnh nhân
            </p>
        </field>
    </record>

    <!-- Kanban View for Patient Feedback -->
    <record id="view_patient_feedback_kanban" model="ir.ui.view">
        <field name="name">healthcare.patient.feedback.kanban</field>
        <field name="model">healthcare.patient.feedback</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" records_draggable="0">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="feedback_date"/>
                <field name="feedback_type"/>
                <field name="state"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="partner_id"/>
                                </div>
                                <div>
                                    <field name="feedback_type" widget="badge" decoration-success="feedback_type == 'compliment'" decoration-warning="feedback_type == 'complaint'" decoration-info="feedback_type == 'suggestion'" decoration-primary="feedback_type == 'question'" decoration-secondary="feedback_type == 'other'"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="feedback_date" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>